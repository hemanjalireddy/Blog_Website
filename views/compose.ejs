<%- include("partials/header"); -%>

  <h1>Compose</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control"type="text" name="postTitle" placeholder="Enter the title">
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30" placeholder="Compose your blog"></textarea>
      <label>Author</label>
      <input class="form-control" type="text" name="author" placeholder="Author">
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>



  <%- include("partials/footer"); -%>